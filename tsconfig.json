{
  "compilerOptions": {
    "outDir": "./lib/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./lib/",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, 
    "emitDeclarationOnly": true   
  },
  "include": [
    "src/**/*.ts"
  ]
}